pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build & Run with Docker Compose') {
            steps {
                sh '''
                  cd ..
                  /usr/bin/docker-compose down || true
                  /usr/bin/docker-compose up -d --build

                '''
            }
        }
    }
}
