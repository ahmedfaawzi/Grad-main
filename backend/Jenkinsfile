pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                cd backend
                docker build -t ahmedfaawzi/flask-backend .
                '''
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                docker stop flask-backend || true
                docker rm flask-backend || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                sh '''
                docker run -d \
                  --name flask-backend \
                  -p 5000:5000 \
                  ahmedfaawzi/flask-backend
                '''
            }
        }
    }
}
